<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5sp"
    tools:context=".ExperimentView">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableRow>

                <Button
                    android:id="@+id/back_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@android:color/white"
                    android:drawableLeft="@drawable/ic_action_name"></Button>

                <TextView
                    android:id="@+id/exp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experiment Name"
                    android:textSize="30sp" />

            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TableRow>

                <TextView
                    android:id="@+id/exp_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_region"
                    android:text="Experiment Region (WIP)"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/unpublish_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginRight="1dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="60dp"
                    android:text="unpublish"
                    android:textSize="10dp" />

            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TableRow>

            <TextView
                android:id="@+id/exp_owner"
                android:layout_width="295dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_people"
                android:text="Owner: xxxx"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/follow"
                android:layout_width="46dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="60dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@android:color/white"
                android:scaleType="fitCenter"
                android:scaleX="2"
                android:scaleY="2"
                android:src="@drawable/ic_action_like"
                android:textSize="10sp" />


        </TableRow>
        </TableLayout>


        <TextView
            android:id="@+id/exp_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_type"
            android:text="Experiment Type: xxx"
            android:textSize="20sp" />


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TableRow>
                <TextView
                    android:id="@+id/exp_published"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_avable"
                    android:text="Availability:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/available_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"

                    android:text="PUBLIC" />

<!--                <Button-->
<!--                    android:id="@+id/geolocation_enable"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="55dp"-->
<!--                    android:layout_marginRight="10dp"-->
<!--                    android:layout_marginLeft="60dp"-->
<!--                    android:text="Enable Geo" />-->

            </TableRow>
        </TableLayout>



        <TextView
            android:id="@+id/exp_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_status"
            android:text="Status: In Progress"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/exp_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_des"
            android:text="Description:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/exp_description"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/border_ui"
            android:text="*Description goes here*"
            android:textSize="15sp" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/exp_rules_text"
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_action_rule"
                    android:text="Rules:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/exp_rules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*rules here*"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableRow
                android:layout_width="377dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_action_trail"
                    android:text="Trials:"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/add_trial"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="63dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="@android:color/black"
                    android:drawableLeft="@drawable/ic_action_add" />

                <Button
                    android:id="@+id/button_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="Register Codes"
                    android:translationX="30dp" />

            </TableRow>
        </TableLayout>

        <ListView
            android:id="@+id/owner_trial_list"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/border_ui">
        </ListView>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/owner_trial_list"
            tools:ignore="MissingConstraints">

            <TableRow>
                <Button
                    android:id="@+id/statistic_owner"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="view Statistic" />

            </TableRow>


            <TableRow>
                <Button
                    android:id="@+id/view_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="view Question" />

                <Button
                    android:id="@+id/button_end_experiment"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="20dp"
                    android:text="End Experiment" />
            </TableRow>
        </TableLayout>

    </LinearLayout>




</ScrollView>
