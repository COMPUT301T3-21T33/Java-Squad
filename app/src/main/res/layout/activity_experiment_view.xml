<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExperimentView">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/exp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experiment Name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/exp_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experiment Region (WIP)"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exp_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: xxxx-xx-xx"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/exp_owner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner: xxxx"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/exp_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experiment Type: xxx"
            android:textSize="20sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/exp_published"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:text="Availability:"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ToggleButton
                android:id="@+id/toggleButton_published"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:onClick="togglePublished"
                android:text="ToggleButton"
                android:textOff="PRIVATE"
                android:textOn="PUBLIC"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/exp_published"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exp_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: In Progress"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/exp_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/exp_description"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/border_ui"
            android:text="*Description goes here*"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/exp_rules_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rules:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exp_rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*rules here*"
            android:textSize="18sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_end_experiment"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="endExperiment"
        android:text="End Experiment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/exp_trial_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_ui"
        app:layout_constraintBottom_toTopOf="@+id/button_end_experiment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

    </ListView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Trials:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/exp_trial_list"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_barcodes"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="launchBarcodeSetup"
        android:text="Barcode Setup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>